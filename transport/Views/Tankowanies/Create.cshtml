@model transport.Models.ApplicationModels.Tankowanie

<font color="white">

    @{
        ViewData["Title"] = "Create";
    }

    <h2>Nowe</h2>

    <form asp-action="Create">
        <div class="form-horizontal">
            <h4>Tankowanie</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>           
            <div class="form-group">
                <label asp-for="IdPojazd" class="col-md-2 control-label">Nr rejestracyjny pojazdu</label>
                <div class="col-md-10">
                    <select asp-for="IdPojazd" class="form-control" asp-items="ViewBag.IdPojazd"></select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PrzebiegTankow" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="PrzebiegTankow" class="form-control" />
                    <span asp-validation-for="PrzebiegTankow" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="IloscPaliwa" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="IloscPaliwa" class="form-control" />
                    <span asp-validation-for="IloscPaliwa" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="WartoscPaliwa" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="WartoscPaliwa" class="form-control" />
                    <span asp-validation-for="WartoscPaliwa" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DataTank" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="DataTank" class="form-control" />
                    <span asp-validation-for="DataTank" class="text-danger"></span>
                </div>
            </div>         
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Dodaj" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</font>