@model transport.Models.ApplicationModels.Ogloszenie

<font color="white">

    @{
        ViewData["Title"] = "Edit";
    }

    <h2>Edytuj</h2>

    <form asp-action="Edit">
        <div class="form-horizontal">
            <h4>Ogloszenie</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdOgloszenie" />
            <div class="form-group">
                <label asp-for="FirmaId" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <select asp-for="FirmaId" class="form-control" asp-items="ViewBag.FirmaId"></select>
                    <span asp-validation-for="FirmaId" class="text-danger"></span>
                </div>
            </div>            
            <div class="form-group">
                <label asp-for="Typ" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Typ" class="form-control" />
                    <span asp-validation-for="Typ" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Tresc" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <textarea asp-for="Tresc" class="form-control"></textarea>
                    <span asp-validation-for="Tresc" class="text-danger"></span>
                </div>
            </div>            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Zapisz" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>

    <div>
        <a asp-action="Index">Wróæ do listy</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</font>