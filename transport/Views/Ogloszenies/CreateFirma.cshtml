@model transport.Models.ApplicationModels.Ogloszenie

<font color="white">
    @{
        ViewData["Title"] = "Create";
    }
    <h2>Dodaj ogłoszenie</h2>
    <form asp-action="CreateFirma">
        <div class="form-horizontal">

            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>           
            <div class="form-group">
                <label asp-for="Typ" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="Typ" class="form-control">
                        <option>dam pracę</option>
                        <option>sprzedam</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Tresc" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <textarea asp-for="Tresc" class="form-control"></textarea>
                    <span asp-validation-for="Tresc" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Dodaj" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>
    <div>
        <a asp-action="IndexFirma">Wróć do listy</a>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</font>