@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<font color="white">
    <h2>Zarejestruj swoją firmę</h2>

    <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
        <h4>Stwórz nowe konto.</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Email" class="col-md-2 control-label">Email</label>
            <div class="col-md-10">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-md-2 control-label">Hasło</label>
            <div class="col-md-10">
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="col-md-2 control-label">Powtórz hasło</label>
            <div class="col-md-10">
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Nazwa" class="col-md-2 control-label">Nazwa firmy</label>
            <div class="col-md-10">
                <input asp-for="Nazwa" class="form-control" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NIP" class="col-md-2 control-label">NIP</label>
            <div class="col-md-10">
                <input asp-for="NIP" class="form-control" />
                <span asp-validation-for="NIP" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Regon" class="col-md-2 control-label">Regon</label>
            <div class="col-md-10">
                <input asp-for="Regon" class="form-control" />
                <span asp-validation-for="Regon" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Wlasciciel" class="col-md-2 control-label">Właściciel</label>
            <div class="col-md-10">
                <input asp-for="Wlasciciel" class="form-control" />
                <span asp-validation-for="Wlasciciel" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UlicaF" class="col-md-2 control-label">Ulica i nr mieszkania</label>
            <div class="col-md-10">
                <input asp-for="UlicaF" class="form-control" />
                <span asp-validation-for="UlicaF" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="KodF" class="col-md-2 control-label">Kod pocztowy</label>
            <div class="col-md-10">
                <input asp-for="KodF" class="form-control" />
                <span asp-validation-for="KodF" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MiastoF" class="col-md-2 control-label">Miasto</label>
            <div class="col-md-10">
                <input asp-for="MiastoF" class="form-control" />
                <span asp-validation-for="MiastoF" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TelefonF" class="col-md-2 control-label">Telefon</label>
            <div class="col-md-10">
                <input asp-for="TelefonF" class="form-control" />
                <span asp-validation-for="TelefonF" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="OCP" class="col-md-2 control-label">OCP ważne do</label>
            <div class="col-md-10">
                <input asp-for="OCP" class="form-control" />
                <span asp-validation-for="OCP" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default">Zarejestruj się</button>
            </div>
        </div>
    </form>

    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
</font>