            </div>
            <div class="form-group">
                <label asp-for="NrDowoduOsob" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="NrDowoduOsob" class="form-control" />
                    <span asp-validation-for="NrDowoduOsob" class="text-danger"></span>
                </div>
            </div>           
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Dodaj" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>

    @if (User.IsInRole("Firma"))
    {
    <div>
        <a href="~/Pracowniks/Index">Wstecz</a>
    </div>
    }
    @if (User.IsInRole("Admin"))
    {
        <div>
            <a href="~/Pracowniks/IndexAdmin">Wstecz</a>
        </div>
    }
</font>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
