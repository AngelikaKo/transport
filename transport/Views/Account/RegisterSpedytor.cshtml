            </div>
            <div class="form-group">
                <label asp-for="Password" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Imie" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Imie" class="form-control" />
                    <span asp-validation-for="Imie" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Nazwisko" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Nazwisko" class="form-control" />
                    <span asp-validation-for="Nazwisko" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Ulica" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Ulica" class="form-control" />
                    <span asp-validation-for="Ulica" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Kod" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Kod" class="form-control" />
                    <span asp-validation-for="Kod" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Miasto" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Miasto" class="form-control" />
                    <span asp-validation-for="Miasto" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Telefon" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Telefon" class="form-control" />
                    <span asp-validation-for="Telefon" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DataUrodz" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="DataUrodz" class="form-control" />
                    <span asp-validation-for="DataUrodz" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DataZatru" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="DataZatru" class="form-control" />
